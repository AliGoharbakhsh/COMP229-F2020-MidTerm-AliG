<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="from-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book Title"
                    <% if ( title =='Add Book'){ %>
                    name="Title" required>
                    <% } else { %>
                    name="Title" 
                    value="<%= book.Title %>"
                    required>
                  <%  } %>
              </div>
                <br>
              <div class="from-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the brief description of the book"
                    <% if ( title =='Add Book'){ %>
                    name="Description" required>
                    <% } else { %>
                    name="Description" required>
                    <%= book.Description %>
                    
                  <%  } %></textarea>
                </div>
                <br>
              <div class="from-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="pricedTextField"
                    placeholder="Enter the book's Price"
                    <% if ( title =='Add Book'){ %>
                    name="Price" required>
                    <% } else { %>
                    name="Price" 
                    value="<%= book.Price %>"
                    required>
                  <%  } %>
                </div>
                <br>
              <div class="from-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Book's Author"
                    <% if ( title =='Add Book'){ %>
                    name="Author" required>
                    <% } else { %>
                    name="Author" 
                    value="<%= book.Author %>"
                    required>
                  <%  } %>
                </div>
                <br>
                <div class="from-group">
                    <label for="GenreTextField">Genre</label>
                    <input type="text" class="form-control"
                    id="GenreTextField"
                    placeholder="Enter the Book's Genre"
                    <% if ( title =='Add Book'){ %>
                    name="Genre" required>
                    <% } else { %>
                    name="Genre" 
                    value="<%= book.Genre %>"
                    required>
                  <%  } %>
                </div>
                <br>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>



    

<% include ../partials/footer.ejs %>
