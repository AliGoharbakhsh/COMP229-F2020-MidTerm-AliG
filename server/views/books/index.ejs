<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <h3 class="col-md-10"> Ali's Favourit Books List </h3>
            <a href="/books/add" class="btn btn-primary" role="button">
            <i class="fa fa-plus"></i> Add a book</a>
          <br>
         <!-- <div class="table-responsive">-->
            <table class="table table-bordered table-striped table-hover">
             <!-- <thead>-->
                <tr class="d-flex">
                  <th class="text-center col-sm-2">Title</th>
                  <th class="text-center col-sm-2">Author</th>
                  <th class="col-sm-5">Description</th>
                  <th class="text-center col-1">Price</th>
                  <th class="text-center col-2">Genre</th>
                  <th class="text-center col-1"></th>
                  <th class="text-cente col-1"></th>
                </tr>
               <!-- </thead>-->
               <!-- <tbody>-->
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr class="d-flex">
                  <td class="text-center col-2"><%= books[count].Title %></td>
                  <td class="text-center col-2"><%= books[count].Author %></td>
                  <td class="col-2"><%= books[count].Description %></td>
                  <td class="text-center col-1">$<%= books[count].Price %></td>
                  <td class="text-center col-2"><%= books[count].Genre %></td>
                  <td class="text-center col-1">
                    <a href="/books/edit/<%= books[count]._id %> " class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit</a>
                  </td>
                  <td class="text-cente col-1">
                    <a href="/books/delete/<%= books[count]._id %> " class="btn btn-danger btn-sm">
                      <i class="fas fa-pencil-alt"></i> Delete</a>
                  </td>
                  </tr>
                <% } %>
            <!--  </tbody>-->
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
         <!-- </div> -->
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


